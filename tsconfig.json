{
    "compilerOptions": {
        "baseUrl": "src",
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2015", "DOM"],
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "newLine": "LF",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "incremental": true,
        "strict": true,
        "downlevelIteration": true,
        "jsx": "react-jsx",
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"],
    "exclude": ["src/test", "src/bin/yarn_link.ts"]
}
